<form role="form" class="form-horizontal">
  <h3>Compliance Manual Review</h3>
  <p class="text-muted">Review compliance requirements and make a decision.</p>

  <div class="form-group">
    <label class="control-label col-md-3">Request Title</label>
    <div class="col-md-9">
      <input type="text" class="form-control" cam-variable-name="requestTitle" cam-variable-type="String" readonly />
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-md-3">Request Type</label>
    <div class="col-md-9">
      <input type="text" class="form-control" cam-variable-name="requestType" cam-variable-type="String" readonly />
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-md-3">Risk Score</label>
    <div class="col-md-9">
      <input type="text" class="form-control" cam-variable-name="riskScore" cam-variable-type="Long" readonly />
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-md-3">Compliance Result</label>
    <div class="col-md-9">
      <input type="text" class="form-control" cam-variable-name="complianceResult" cam-variable-type="String" readonly />
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-md-3">Compliance Notes</label>
    <div class="col-md-9">
      <textarea class="form-control" cam-variable-name="complianceNotes" cam-variable-type="String" rows="2" readonly></textarea>
    </div>
  </div>

  <hr/>

  <div class="form-group">
    <label class="control-label col-md-3">Decision *</label>
    <div class="col-md-9">
      <select class="form-control" cam-variable-name="manualComplianceDecision" cam-variable-type="String" required>
        <option value="">-- Select Decision --</option>
        <option value="PASS">Pass - Forward to Final Approval</option>
        <option value="FAIL">Fail - Reject Request</option>
      </select>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-md-3">Comments</label>
    <div class="col-md-9">
      <textarea class="form-control" cam-variable-name="complianceReviewComment" cam-variable-type="String" rows="3" placeholder="Add your compliance review comments..."></textarea>
    </div>
  </div>
</form>
