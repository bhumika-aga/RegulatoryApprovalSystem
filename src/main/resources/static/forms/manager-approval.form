<form role="form" class="form-horizontal">
  <h3>Manager Approval</h3>
  <p class="text-muted">Review and approve or escalate this request.</p>

  <div class="form-group">
    <label class="control-label col-md-3">Request Title</label>
    <div class="col-md-9">
      <input type="text" class="form-control" cam-variable-name="requestTitle" cam-variable-type="String" readonly />
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-md-3">Request Type</label>
    <div class="col-md-9">
      <input type="text" class="form-control" cam-variable-name="requestType" cam-variable-type="String" readonly />
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-md-3">Department</label>
    <div class="col-md-9">
      <input type="text" class="form-control" cam-variable-name="department" cam-variable-type="String" readonly />
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-md-3">Risk Score</label>
    <div class="col-md-9">
      <input type="text" class="form-control" cam-variable-name="riskScore" cam-variable-type="Long" readonly />
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-md-3">Reviewer Decision</label>
    <div class="col-md-9">
      <input type="text" class="form-control" cam-variable-name="reviewerDecision" cam-variable-type="String" readonly />
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-md-3">Reviewer Comments</label>
    <div class="col-md-9">
      <textarea class="form-control" cam-variable-name="reviewerComment" cam-variable-type="String" rows="2" readonly></textarea>
    </div>
  </div>

  <hr/>

  <div class="form-group">
    <label class="control-label col-md-3">Decision *</label>
    <div class="col-md-9">
      <select class="form-control" cam-variable-name="managerDecision" cam-variable-type="String" required>
        <option value="">-- Select Decision --</option>
        <option value="APPROVED">Approve - Forward to Compliance</option>
        <option value="REJECTED">Reject - End Process</option>
        <option value="ESCALATE">Escalate to Senior Manager</option>
      </select>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-md-3">Comments</label>
    <div class="col-md-9">
      <textarea class="form-control" cam-variable-name="managerComment" cam-variable-type="String" rows="3" placeholder="Add your approval comments..."></textarea>
    </div>
  </div>
</form>
